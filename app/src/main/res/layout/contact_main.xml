<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/single_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系人"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/group_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群组"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/black_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小黑屋"
            android:layout_weight="1"/>

    </LinearLayout>
<RelativeLayout

    android:background="@color/blue"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <cdflynn.android.library.scroller.BubbleScroller
        android:id="@+id/bubble_scroller"
        android:layout_width="100dp"
        android:layout_alignParentEnd="true"
        android:layout_height="match_parent"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:bubbleScroller_highlightColor="@color/blue_light"
        app:bubbleScroller_textColor="@android:color/white"
        app:bubbleScroller_textSize="@dimen/text_size_small"/>
    <csy.menu.satellitemenulib.view.SatelliteMenu
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu_postion="right_bottom"
        app:radius="50dp"
        app:menu_image_width="30dp"
        app:menu_item_image_width="25dp"
        android:id="@+id/Contact_menu"/>
</RelativeLayout>
</LinearLayout>